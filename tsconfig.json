{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/types/DTO"],
    "jsx": "react-jsx",
    "baseUrl": "course_flow/static/course_flow/js",
  },
  "include": ["./course_flow/static/course_flow/js/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
