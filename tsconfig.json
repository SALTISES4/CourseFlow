{
  "compilerOptions": {
    // try to make TS ignore as much as possible for now
    "noImplicitAny": false, // allow 'any' types
    "strictNullChecks": false, // allow fuzziness in our null definitions
    "strict": false, // lol
    "skipLibCheck": true, // don't TS check the node modules and other defined libs
    "allowJs": true, // don't allow just TS/TSX files
    "noEmitOnError": false, // make TS still build even if we run into errors
    "noEmit": true, // forgot what this does
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],

    "checkJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // is this from tsconfig path or from baseurl? (note that we don't have any types yet)
    ],
    "jsx": "react-jsx",
    // This must be set if you're using "paths"
    "baseUrl": "./course_flow/static/",
    /**
    ALIASES
    */
    "paths": {
      "@cfModule/*": [
        "./course_flow/js/react/src/*"
      ],
      "@cfComponents/*": [
        "./course_flow/js/react/src/Components/components/*"
      ],
      "@cfViews/*": [
        "./course_flow/js/react/src/Components/Views/*"
      ],
      "@cfLibrary/*": [
        "./course_flow/js/react/src/Components/Library/*"
      ],
      "@cfCommonComponents/*": [
        "./course_flow/js/react/src/Components/components/CommonComponents/*"
      ],
      "@cfFindState": [
        "./course_flow/js/react/src/redux/FindState.js"
      ],
      "@cfReducers": [
        "./course_flow/js/react/src/redux/Reducers.js"
      ],
      "@cfUtility": [
        "./course_flow/js/react/src/UtilityFunctions.js"
      ],
      "@cfConstants": [
        "./course_flow/js/react/src/Constants.js"
      ],
      "@cfPostFunctions": [
        "./course_flow/js/react/src/PostFunctions.js"
      ]
    }
  },
  "include": [
    "./course_flow/static/course_flow/js/**/*" //is this from baseurl relative path?
  ],
  "exclude": [
    "./course_flow/static/course_flow/js/react/dist/**/*", //is this from baseurl relative path?
    "node_modules", //is this from baseurl relative path?
    "./course_flow/static/course_flow/js/react/src/entry/scripts-library.js", //is this from baseurl relative path?
    "./course_flow/static/course_flow/js/react/src/entry/scripts-live.js", //is this from baseurl relative path?
    "./course_flow/static/course_flow/js/react/src/entry/scripts-wf-redux.js" //is this from baseurl relative path?

  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
