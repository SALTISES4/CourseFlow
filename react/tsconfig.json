{
  "compilerOptions": {
    // "explainFiles": true, // enable this for file inclusion debugging
    "outDir": "./build",
    // try to make TS ignore as much as possible for now
    "noImplicitAny": false,
    // allow 'any' types
    "strictNullChecks": false,
    // allow fuzziness in our null definitions
    "strict": true,
    // lol
    "skipLibCheck": true,
    // don't TS check the node modules and other defined libs
    "allowJs": true,
    // don't allow just TS/TSX files
    "noEmitOnError": false,
    // make TS still build even if we run into errors
    "noEmit": false,
    // forgot what this does
    "target": "es2020",
     "pretty": true,
    // "useDefineForClassFields": false,
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "checkJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ],
    "jsx": "react-jsx",
    // This must be set if you're using "paths"
    "baseUrl": "./src/",
    /**
    ALIASES
    */
    "paths": {
//       "jquery":["node_modules/@types/jquery/index"],
//      "jquery-ui":["node_modules/@types/jqueryui/index"],
      "@cf/*": [
        "./*"
      ],
      "@cfComponents/*": [
        "./components/common/*"
      ],
      "@cfViews/*": [
        "./components/views/*"
      ],
      "@cfPages/*": [
        "./components/pages/*"
      ],
      "@cfEditableComponents": [
        "./components/common/editableComponents"
      ],
      "@cfEditableComponents/*": [
        "./components/common/editableComponents/*"
      ],
      "@cfFindState": [
        "./redux/findState.ts"
      ],
      "@cfRedux/*": [
        "./redux/*"
      ],
      "@cfUtility": [
        "./utility/utilityFunctions.jsx"
      ],
      "@cfConstants": [
        "./constants.js"
      ],
      "@XMLHTTP/*": [
        "./HTTP/XMLHTTP/*"
      ],
      "@cfSCSS/*": [
        "./scss/*"
      ],
    }
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "./build/**/*",
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
